namespace DcdrFlatBuffers;

table Vec3
{
    x: float;
    y: float;
    z: float;
}

table Pixel
{
    color: Vec3;
    variance: Vec3;
    samples: ulong;
}

table ChunkInfo
{
    x: ushort;
    y: ushort;
    w: ushort;
    h: ushort;
}

table Chunk
{
    info: ChunkInfo;
    pixels: [Pixel];
}

table ChunkTask
{
    chunk: ChunkInfo;
    iterations: uint;
}